 <h1>Books</h1>
 <table>
   <thead>
     <tr>
       <th>Title </th>
       <th>Body</th>
       <th></th>
     </tr>
   </thead>
   <tbody>
     <% @books.each do |book| %>
     <tr>
       <td>
        <%= book.title %>
       </td>
       <td>
         <%= book.body %>
       </td>
       <td>
         <%= link_to "show" , book_path(book) %>
         <%= link_to "edit", edit_book_path(book) %>
         <%= link_to "destroy", book_path(book), method: :delete, "data-confirm" => "Are you sure?" %>
       </td>
     </tr>
     <% end %>
   </tbody>
 </table>

 
 
 
 
 <h2>New book</h2>
 
 <% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <% @book.errors.full_messages.each do |book| %>
  <%= book %>
  <% end %>
  
<% end %>
 
  


 <!-- form_with部分 -->
<%= form_with model:@book, local:true do |f| %>

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>
 <br>
  <%= f.submit 'Create Book' %>
<% end %>